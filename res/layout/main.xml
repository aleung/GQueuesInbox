<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000060"
            android:paddingTop="4dip"
            android:layout_marginBottom="5dip">
        <TextView android:text="@string/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#ffffff" android:textSize="25sp" android:textStyle="bold"/>
        <Button android:id="@+id/webButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="GQueues.com" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <EditText android:id="@+id/DescriptionEdit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="New item..."/>
    <EditText android:id="@+id/NoteEdit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="3" android:gravity="top" android:hint="Enter a note here..."/>
    <Button android:text="Send to GQueues Inbox" android:id="@+id/SendButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>
    <TextView android:id="@+id/HistroyTitleText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/text_banner_background" android:text="Recent items"/>
    <ListView android:id="@+id/HistoryList" android:layout_width="wrap_content" android:layout_height="fill_parent"/>
</LinearLayout>
